<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Writing - My Diary</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
<style>
    body {
        font-family: 'Garamond', garamond;
        background-color: #FFF5EE;
        margin: 0;
        padding: 0;
        text-align: center;
        padding-top: 50px;
    }
    .editor-container {
        width: 80%;
        margin: auto;
    }
    textarea, input[type="text"], input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-family: 'Garamond', garamond;
        font-size: 16px;
    }
    button {
        background-color: #F8C8DC;
        color: black;
        border: none;
        cursor: pointer;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 16px;
    }
    button:hover {
        background-color: #AA336A;
    }
    /* Style for the modal */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        padding-top: 60px;
    }
    /* Modal Content/Box */
    .modal-content {
        background-color: #fefefe;
        margin: 5% auto; /* 15% from the top and centered */
        padding: 20px;
        border: 1px solid #888;
        width: 80%; /* Could be more or less, depending on screen size */
    }
    /* The Close Button */
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }
    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }
</style>
</head>
<body>
<h1>Writing Page</h1>
<div class="editor-container">
    <input type="text" id="entry-title" placeholder="Entry Title" required>
    <textarea id="entry-content" placeholder="Start typing your entry..." required></textarea>
    <button onclick="saveEntry()">Save Publicly</button>
    <button onclick="document.getElementById('passwordModal').style.display='block'">Lock with Password</button>
</div>

<!-- The Modal for password locking -->
<div id="passwordModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="document.getElementById('passwordModal').style.display='none'">&times;</span>
        <p>Enter a password to lock your entry:</p>
        <input type="password" id="entry-password" placeholder="Enter password">
        <button onclick="lockEntry()">Lock Entry</button>
    </div>
</div>

<script>
    // Function to simulate saving publicly
    function saveEntry() {
        var title = document.getElementById('entry-title').value;
        var content = document.getElementById('entry-content').value;
        console.log('Title:', title);  // For debugging: log the title
        console.log('Content:', content);  // For debugging: log the content
        alert("Entry titled '" + title + "' saved publicly.");
        // Here add Ajax to send data to server or similar
    }

    // Function to simulate locking the entry
    function lockEntry() {
        var password = document.getElementById('entry-password').value;
        if (password === "demoPassword") {
            alert("Successfully locked with password.");
            document.getElementById('passwordModal').style.display='none';
        } else {
            alert("Incorrect password. Try 'demoPassword'.");
        }
    }
</script>
</body>
</html>
